# Application
NODE_ENV=development
PORT=3001

# Database
DATABASE_URL="postgresql://postgres:postgres@localhost:5432/merkurmail?schema=public"

# JWT
JWT_SECRET=your-secret-key-change-in-production
JWT_EXPIRES_IN=15m
JWT_REFRESH_SECRET=your-refresh-secret-key-change-in-production
JWT_REFRESH_EXPIRES_IN=7d

# Encryption
ENCRYPTION_KEY=0123456789abcdef0123456789abcdef0123456789abcdef0123456789abcdef

# Frontend URL (for CORS)
FRONTEND_URL=http://localhost:3000

# File Storage (S3 compatible)
S3_ENDPOINT=http://localhost:9000
S3_ACCESS_KEY=minioadmin
S3_SECRET_KEY=minioadmin
S3_BUCKET=merkurmail-documents
S3_REGION=eu-central-1

# Redis (optional)
REDIS_HOST=localhost
REDIS_PORT=6379

# Deutsche Post (placeholder)
DEUTSCHE_POST_API_URL=https://api.deutschepost.de
DEUTSCHE_POST_API_KEY=your-api-key

# Logging
LOG_LEVEL=debug
